# SUMIT OfficeGuy API Credentials
# Get your credentials from: https://app.sumit.co.il/developers/keys/

OFFICEGUY_COMPANY_ID=
OFFICEGUY_PRIVATE_KEY=
OFFICEGUY_PUBLIC_KEY=

# Environment (www for production, dev for development)
OFFICEGUY_ENVIRONMENT=www

# API Configuration
OFFICEGUY_API_URL=https://api.sumit.co.il
OFFICEGUY_API_TIMEOUT=180
OFFICEGUY_VERIFY_SSL=true

# Merchant Configuration
OFFICEGUY_MERCHANT_NUMBER=
OFFICEGUY_SUBSCRIPTIONS_MERCHANT_NUMBER=

# Payment Settings
OFFICEGUY_TESTING_MODE=false
OFFICEGUY_AUTHORIZE_ONLY=false
OFFICEGUY_AUTO_CAPTURE=true
OFFICEGUY_DRAFT_DOCUMENT=false
OFFICEGUY_SEND_DOCUMENT_BY_EMAIL=true

# Payment Limits
OFFICEGUY_MAX_PAYMENTS=12
OFFICEGUY_MIN_AMOUNT_FOR_PAYMENTS=100
OFFICEGUY_MIN_AMOUNT_PER_PAYMENT=10
OFFICEGUY_AUTHORIZE_ADDED_PERCENT=0
OFFICEGUY_AUTHORIZE_MINIMUM_ADDITION=0

# Customer Settings
OFFICEGUY_MERGE_CUSTOMERS=false
OFFICEGUY_UPDATE_ON_SUCCESS=true

# Document Settings
OFFICEGUY_DOCUMENT_LANGUAGE=he
OFFICEGUY_AUTOMATIC_LANGUAGES=true
OFFICEGUY_VAT_INCLUDED=true
OFFICEGUY_DEFAULT_VAT_RATE=17

# Token Settings
OFFICEGUY_SUPPORT_TOKENS=true
OFFICEGUY_TOKEN_PARAM=5

# Stock Synchronization
# Options: none, 12 (every 12 hours), 24 (every 24 hours)
OFFICEGUY_STOCK_SYNC_ON_CHECKOUT=false
OFFICEGUY_STOCK_SYNC_FREQUENCY=none

# Logging
OFFICEGUY_LOGGING_ENABLED=true
OFFICEGUY_LOG_CHANNEL=stack
OFFICEGUY_LOG_LEVEL=debug

# Routes Configuration
OFFICEGUY_ROUTE_PREFIX=officeguy
